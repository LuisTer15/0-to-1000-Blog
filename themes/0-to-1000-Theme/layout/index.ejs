<!-- Navbar -->
<%- partial('_partial/navbar') %>

<!-- head section -->
<div class="row" id="head">
    <div class="col-xs-12">
        <h1><strong><%= config.title %></strong></h1>
        <p>"<%= config.subtitle %>"</p>
    </div>
</div><!-- / head section -->

<!-- posts section -->
<div class='row' id="posts">

    <div class="col-sm-12 col-md-7 col-md-offset-1">
        <ul>
        <% page.posts.each(function(post){ %>
            <li id="post_wrapper">
                <h3>
                    <a href="<%- url_for(post.path) %>">
                        <strong><%= post.title %></strong>
                    </a>
                </h3>
                <div class='text-muted'>
                    <p><%= date(post.date, config.date_format) %></p> 
                </div>
                
                <% if(post.content) { %>
                    <p><%- post.excerpt %></p>
                <% } %>

                <a href="<%- url_for(post.path) %>"><button class="btn btn-default btn-sm">Read more...</button></a>
                <div id="post_divider"></div>
            </li>
        <% }) %>
        </ul>

        <nav id="pagination">
            <ul>
                <% if (page.prev){ %>
                    <li><a href="<%- config.root %><%- page.prev_link %>"><strong><< Newer posts</strong></a></li>
                <% } %>
                <% if (page.next){ %>
                    <li><a href="<%- config.root %><%- page.next_link %>"><strong>Older posts >></strong></a></li>
                <% } %>
            </ul>
        </nav>
    </div>

    <div class="col-md-3" id="about_me">
        <div class="col-xs-6 col-md-12">
            <img class="img-circle center-block" src="https://avatars1.githubusercontent.com/u/26190403?v=4&s=400&u=10e2a81032f6c499821455d1e5ea0087f57bd21b" alt="Profile Picture">
        </div>
        
        <div class="col-xs-6 col-md-12">
            <h4><strong>About Me</strong></h4>
            <p>Welcome to my blog, my name is Luis Ternera, I am an Architect, Full Stack Rails Developer and Entrepreneur, this is a space to share my experiences in life. Enjoy!</p>
        </div>
        
        <div class="col-md-12 hidden-xs hidden-sm">
            <a href="https://github.com/LuisTer15" target="_blank"><i class="fa fa-github-square" aria-hidden="true"></i></a>
            <a href="https://www.facebook.com/luister" target="_blank"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
            <a href="https://twitter.com/LuisTernera" target="_blank"><i class="fa fa-twitter-square" aria-hidden="true"></i></a>
            <a href="https://www.linkedin.com/in/luis-ternera-hernandez-937299148/" target="_blank"><i class="fa fa-linkedin-square" aria-hidden="true"></i></a>
            <a href="https://luister15.github.io/portfolio/" target="_blank"><i class="fa fa-briefcase" aria-hidden="true"></i></a>
        </div>
    </div>

</div><!-- posts section -->

<!-- Footer -->
<%- partial('_partial/footer') %>
